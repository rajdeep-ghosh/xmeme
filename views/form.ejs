<div class="mt-3">
    <h3>Submit Memes</h3>
</div>
<div class="mt-4">
    <form action="/" method="POST">
        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="authorName" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Caption</label>
            <input type="text" class="form-control" name="memeCaption" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Meme URL</label>
            <input type="text" class="form-control" name="memeURL" required>
        </div>
        <button type="submit" class="mt-2 btn btn-dark">Submit</button>
    </form>
</div>
<hr class="style">